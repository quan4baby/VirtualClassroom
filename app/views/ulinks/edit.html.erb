<h1>Edit <%= @ulink.title %></h1>
<form action="/ulinks/<%= @ulink.id %> " method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label>Title:</label>
		<input type="text" name="ulink[title]" maxlength="100"  value="<%= @ulink.title %>"> 
	</p>
	<p>
		
		<label for= "url">Enter a https:// Url:</label>
		<input type="url" name="ulink[url]" value="<%= @ulink.url %>" " size="30">
	</p>
	<input type="submit" value="Update">
	<button type="cancel" onclick="/ulinks">Cancel</button>

</form>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<p><%= e %></p>
	<% end %>
<% end %>