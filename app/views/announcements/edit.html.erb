<h1>Edit <%= @announcement.title %></h1>
<form action="/announcements/<%= @announcement.id %> " method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label>Title:</label>
		<input type="text" name="announcement[title]" value="<%= @announcement.title %>">
	</p>
	<p>
		<label>Details:</label>
		<textarea style="text-align: left;" 
			rows= "10" cols= "30" name="announcement[details]"><%= @announcement.details %></textarea>
	</p>
	<input type="submit" value="Update">
	<button type="cancel" onclick="/announcements">Cancel</button>

</form>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<p><%= e %></p>
	<% end %>
<% end %>